#include <stdint.h>
#include <stdio.h>

#include"stm32f407xx.h"

#define BV(n) (1 << (n))

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif


void led_init(void);
void led_run_rl(void);
void myDelayMs(uint32_t ms);

int main(void)
{
	led_init();
	while(1)
	{
		led_run_rl();
	}
}
void led_init(void)
{
	//0. enable clock for GPIOD in AHB1
	RCC->AHB1ENR |= BV(3);
	//1. select mode as output
	GPIOD->MODER &= ~(BV(25) | BV(27) | BV(29) | BV(31));
	GPIOD->MODER |= BV(24) | BV(26) | BV(28) | BV(30);
	//2. select type as push pull
	GPIOD->OTYPER &= ~(BV(12) | BV(13) | BV(14) | BV(15));
	//3. select speed as low
	GPIOD->OSPEEDR &= ~(BV(25) | BV(27) | BV(29) | BV(31));
	GPIOD->OSPEEDR &= ~(BV(24) | BV(26) | BV(28) | BV(30));
	//4. select pull up/down as no
	GPIOD->PUPDR &= ~(BV(25) | BV(27) | BV(29) | BV(31));
	GPIOD->PUPDR &= ~(BV(24) | BV(26) | BV(28) | BV(30));
}
// Running LED right to left
void led_run_rl(void)
{
    GPIOD->ODR = BV(15);   // PD15 ON
    myDelayMs(500);

    GPIOD->ODR = BV(14);   // PD14 ON
    myDelayMs(500);

    GPIOD->ODR = BV(13);   // PD13 ON
    myDelayMs(500);

    GPIOD->ODR = BV(12);   // PD12 ON
    myDelayMs(500);
}
void myDelayMs(uint32_t ms)
{
    for(uint32_t i = 0; i < ms; i++)
    {
        for(volatile uint32_t j = 0; j < 16000; j++);
    }
}








